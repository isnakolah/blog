<div style="height: @Size.ToString()px; width: @Size.ToString()px">
    @if (!string.IsNullOrWhiteSpace(Src))
    {
        <img src="@Src" alt="@Alt" class="@Classes"/>
    }
    else
    {
        <img src="https://preview.colorlib.com/theme/magdesign/images/xperson_1.jpg.pagespeed.ic.Zebptmx_f8.webp" alt="@Alt" class="@Classes"/>
    }
</div>


@code {
    private const string Classes = $"align-middle rounded-full h-full";

    [Parameter, EditorRequired]
    public string Src { get; init; } = default!;

    [Parameter]
    public string? Alt { get; init; }
    
    [Parameter, EditorRequired]
    public int Size { get; init; }
}