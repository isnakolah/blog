@using Common.Application.Articles.Queries.GetTrending
@using Common.Application.Articles.Queries.DTOs

<div>
    <div class="flex align-center justify-center pb-5 md:pb-12">
        <h3 class="text-2xl md:text-4xl font-extrabold">
            Trending
        </h3>
    </div>

    <ArticleTrendingCard Article="@Article"/>
</div>

@code {

    private ArticleGetDTO Article = new();

    protected override async Task OnInitializedAsync()
    {
        var articleData = await Mediator.Send(new GetTrendingArticlesQuery());

        Article = articleData.Data!.First();
    }

}